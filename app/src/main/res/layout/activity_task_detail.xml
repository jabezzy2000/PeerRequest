<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TaskDetailActivity">

    <ImageView
        android:id="@+id/ivTaskDetailProfilePicture"
        android:layout_width="102dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="307dp"
        android:layout_toEndOf="@+id/tvTaskDetailName"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTaskDetailName"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="105dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Username " />

    <TextView
        android:id="@+id/tvTaskDetailRating"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvTaskDetailName"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="316dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="5.00" />

    <TextView
        android:id="@+id/tvTaskDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="168dp"
        android:textAllCaps="true"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Pick-Up Groceries At 1011 Ave" />

    <TextView
        android:id="@+id/tvTaskDetailDescription"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_below="@+id/tvTaskDetailTitle"
        android:layout_alignStart="@+id/tvTaskDetailTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="1dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textSize="20sp"
        tools:text="Hello, I'd love for someone to pickup some of my groceries form ...... and drop them off near the bus stop at the dexter office. IM willing to offer 20$" />

    <ImageButton
        android:id="@+id/ibTaskDetailEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskDetailDescription"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_edit"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibTaskDetailRequestBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskDetailDescription"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/request"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTaskDetailTasks"
        android:layout_width="match_parent"
        android:layout_height="287dp"
        android:layout_below="@+id/ibTaskDetailRequestBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/tvRequests"
        android:layout_width="102dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/ibTaskDetailRequestBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="333dp"
        android:layout_marginBottom="68dp"
        android:text="Requests:"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMakeARequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibTaskDetailRequestBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="Make A Request"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/noRequestsYet"
        android:layout_width="178dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="443dp"
        android:text="You Don't Have Any Requests Yet"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible" />
</RelativeLayout>

