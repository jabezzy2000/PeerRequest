<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TaskDetailActivity">

    <ImageView
        android:id="@+id/ivTaskDetailProfilePicture"
        android:layout_width="99dp"
        android:layout_height="74dp"
        android:layout_alignBottom="@+id/tvTaskDetailName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="227dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="-26dp"
        android:layout_toEndOf="@+id/tvTaskDetailName"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTaskDetailName"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="23dp"
        tools:text="Username " />

    <TextView
        android:id="@+id/tvTaskDetailRating"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="2dp"
        tools:text="5.00" />

    <TextView
        android:id="@+id/tvTaskDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="88dp"
        tools:text="Pick-Up Groceries At 1011 Ave" />

    <TextView
        android:id="@+id/tvTaskDetailDescription"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_below="@+id/tvTaskDetailTitle"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        tools:text="Hello, I'd love for someone to pickup some of my groceries form ...... and drop them off near the bus stop at the dexter office. IM willing to offer 20$" />

    <ImageButton
        android:id="@+id/ibTaskDetailEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskDetailDescription"
        android:layout_alignBottom="@+id/ibTaskDetailRequestBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/ic_edit"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibTaskDetailRequestBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTaskDetailDescription"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/request"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="68dp"
        android:text="Rating:" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTaskDetailTasks"
        android:layout_width="407dp"
        android:layout_height="386dp"
        android:layout_below="@+id/ibTaskDetailRequestBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="11dp" />

    <TextView
        android:id="@+id/tvRequests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ibTaskDetailRequestBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="249dp"
        android:layout_marginBottom="15dp"
        android:text="Requests:"
        android:textColor="@android:color/holo_green_dark" />
</RelativeLayout>

