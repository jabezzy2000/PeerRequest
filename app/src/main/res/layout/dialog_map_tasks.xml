<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dialogMapProfilePicture"
        android:layout_width="105dp"
        android:layout_height="98dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/dialogMapName"
        android:layout_width="68dp"
        android:layout_height="21dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/dialogMapTaskTitle"
        android:layout_width="69dp"
        android:layout_height="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/dialogMapName"
        app:layout_constraintTop_toBottomOf="@+id/dialogMapName" />

    <TextView
        android:id="@+id/dialogMapTaskDescription"
        android:layout_width="282dp"
        android:layout_height="57dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/dialogMapName"
        app:layout_constraintTop_toBottomOf="@+id/dialogMapTaskTitle" />

    <Button
        android:id="@+id/mapDialogCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogMapProfilePicture" />

    <Button
        android:id="@+id/mapDialogGoToTaskBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="120dp"
        android:text="Go To Task"
        app:layout_constraintStart_toEndOf="@+id/mapDialogCancelBtn"
        app:layout_constraintTop_toTopOf="@+id/mapDialogCancelBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>